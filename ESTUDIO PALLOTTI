<script>
function autocompletar() {
  let v = document.getElementById("cliente").value;
  if (v) document.getElementById("telefono").value = v.split("|")[0];
}

function programar() {
  let fecha = document.getElementById("fecha").value;
  let mensaje = document.getElementById("mensaje").value;

  if (!mensaje || !fecha) {
    alert("‚ö†Ô∏è Complet√° la fecha y el mensaje");
    return;
  }
  alert(
    "‚úÖ Recordatorio creado (demo)\n\n" +
    "Fecha: " + fecha + "\n\n" +
    "Mensaje:\n" + mensaje
  );
}
</script>

